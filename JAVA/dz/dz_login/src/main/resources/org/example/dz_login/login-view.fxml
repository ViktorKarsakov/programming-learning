<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<VBox xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.dz_login.LoginController"
      spacing="10" alignment="CENTER" prefWidth="300" prefHeight="250"

      styleClass="root">

    <Label text="Вход в систему" styleClass="label h4"/>

    <TextField fx:id="usernameField" promptText="Логин" styleClass="form-control"/>
    <PasswordField fx:id="passwordField" promptText="Пароль" styleClass="form-control"/>

    <Button text="Войти" onAction="#handleLogin" styleClass="btn btn-primary"/>

</VBox>
